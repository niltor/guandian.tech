@model Comment.Data.Entity.Article

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>@Model.Title</h2>

    <div>
        @Model.AuthorName @@ @Model.CreatedTime  (@Model.ViewNunmber)
    </div>
    <div>
        @Model.Summary
    </div>
    <hr />
    <div id="editSection">
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<header>
    <link href="~/lib/tui-editor/dist/tui-editor-contents.css" rel="stylesheet" />
</header>
@section Scripts{
    <script src='~/lib/markdown-it/dist/markdown-it.js'></script>
    <script src="~/lib/to-mark/dist/to-mark.js"></script>
    <script src="~/lib/tui-code-snippet/dist/tui-code-snippet.js"></script>
    <script src="~/lib/codemirror/lib/codemirror.js"></script>
    <script src="~/lib/highlightjs/highlight.pack.js"></script>
    <script src='~/lib/tui-editor/dist/tui-editor-Viewer.js'></script>
    <script>
        var editor = new tui.Editor({
            el: document.querySelector('#editSection'),
            height: '300px',
            initialValue: "@Model.Content"
        });
    </script>
}